{
    "env": {
        "browser": true,
        "es2021": true,
        "webextensions": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": 0,
        "prefer-template": 0,
        "no-param-reassign": 0,
        "no-restricted-syntax": 0,
        "no-await-in-loop": 0,
        "no-continue": 0,
        "no-plusplus": 0,
        "no-console": 0,
        "no-loop-func": 0,
        "no-return-await": 0,
        "consistent-return": 0,
        "no-promise-executor-return": 0
    }
}
